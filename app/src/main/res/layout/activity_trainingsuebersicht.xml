<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="mi.ur.de.android.runnersmeetup.Trainingsuebersicht">

    <RelativeLayout
        android:layout_width="259dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/textView17"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Durchschnittliche Geschwindigkeit:" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAlignment="viewStart"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="km/h"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/sortieren_nach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sortieren nach"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/sortieren_nach_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/sortieren_nach" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:background="@color/hellGrau"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView9"
            android:gravity="end"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="km/h"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="end"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="km"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="min"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView10"
            android:gravity="end"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
