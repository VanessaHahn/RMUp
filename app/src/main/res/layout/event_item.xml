<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/show_event_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/show_event_date"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="20"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_alignBaseline="@+id/show_event_time"
            android:layout_alignBottom="@+id/show_event_time"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/show_event_time"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="20"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/show_event_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/show_event_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12dp" />


</LinearLayout>