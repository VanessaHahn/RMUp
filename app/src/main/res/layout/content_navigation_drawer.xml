<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mi.ur.de.android.runnersmeetup.NavigationDrawer"
    tools:showIn="@layout/app_bar_navigation_drawer"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/runner" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="Laufübersicht"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/übersicht_dauer"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/stopuhr" />

        <TextView
            android:id="@+id/durchschnitt_dauer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/übersicht_dauer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/durchschnitt_dauer_wert"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/durchschnitt_dauer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="min"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="197dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/übersicht_kmh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/tacho"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/durchschnitt_kmh"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/übersicht_kmh" />

        <TextView
            android:id="@+id/durchschnitt_kmh_wert"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="km"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/durchschnitt_kmh" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/übersicht_km"
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/distance"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/durchschnitt_km"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/übersicht_km" />
        <TextView
            android:id="@+id/durchschnitt_km_wert"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="km/h"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/durchschnitt_km" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_weight="0.03">

        <TextView
            android:id="@+id/sortieren_nach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sortieren nach"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/sortieren_nach_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/sortieren_nach" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.01">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView9"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="km/h"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="km"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="min"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView10"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bitmapView"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</LinearLayout>
