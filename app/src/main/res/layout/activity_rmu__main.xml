<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="mi.ur.de.android.runnersmeetup.RMU_Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geschwindigkeit:  0.0 km/h"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:padding="10dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zeit:  0:00 min"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:padding="10dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strecke:  0.0 km"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:padding="10dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalorien:  0 kcal"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:paddingBottom="20dp"
        android:padding="10dp"
        android:id="@+id/textView4" />


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@mipmap/start_button"
        android:id="@+id/startButton"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
    </LinearLayout>

</LinearLayout>
