<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/weiß"
    tools:context="mi.ur.de.android.runnersmeetup.RMU_Main"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="206dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">
               
        <ImageView
            android:id="@+id/übersicht_kmh"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/tacho" />
               
        <TextView
            android:id="@+id/current_velocity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:gravity="center"
            android:text="0,0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/durchschnitt_kmh_wert"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="km/h"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="206dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/übersicht_km"
            android:layout_width="50dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/distance"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/current_distance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:gravity="center"
            android:text="0,000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/durchschnitt_km_wert"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="km"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="206dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/übersicht_dauer"
            app:srcCompat="@drawable/stopuhr"/>      

        <TextView
            android:id="@+id/current_time"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:gravity="center"
            android:text="00:00"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
                       
        <TextView
            android:id="@+id/durchschnitt_dauer_wert"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="min"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="206dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/übersicht_kalorien"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/kalorienicon" />

        <TextView
            android:id="@+id/current_calories"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:gravity="center"
            android:text="0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
           
        <TextView
            android:id="@+id/durchschnitt_kalorien_wert"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="kcal"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="Durchschnittliche Geschwindigkeit: "
            android:textSize="15dp" />
           
        <TextView
            android:id="@+id/meanVelo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:gravity="center"
            android:text="0,0"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView" />
           
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="km/h"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/meanVelo"
            android:layout_marginStart="13dp" />
           
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/weiß"
        android:scaleType="centerCrop"
        android:src="@drawable/playbutton" />

</LinearLayout>